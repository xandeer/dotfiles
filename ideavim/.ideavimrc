let mapleader=","
set easymotion
set ignorecase smartcase
set hlsearch

nnoremap <a-h> gT
nnoremap <a-l> gt

nnoremap [m :action MethodUp<cr>
nnoremap ]m :action MethodDown<cr>

inoremap <C-a> <Home>
inoremap <C-b> <Left>
inoremap <C-d> <Delete>
inoremap <C-e> <End>
inoremap <C-f> <Right>
inoremap <C-y> "*p

nnoremap <leader>sr :source ~/.ideavimrc<cr>

; easy system clipboard copy/paste
noremap y "*y
noremap yy "*Y
noremap p "*p
noremap P "*P
