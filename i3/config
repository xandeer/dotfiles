  i3bar_command i3bar
  # status_command i3blocks
  status_command i3status
  position bottom

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
#	tray_output primary
#	tray_output eDP1

  bindsym button4 nop
  bindsym button5 nop
#   font xft:URWGothic-Book 11
  strip_workspace_numbers yes

  colors {
    background #222D31
    statusline #F9FAF9
