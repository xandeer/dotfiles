[init]
	defaultBranch = main

[alias]
	co = checkout
	br = branch
	st = status
	aa = add -A .
	cm = commit -m
	undo = reset HEAD~1
	rv = revert
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	rbs = rebase --skip
	save = stash push
	pop = stash pop
	apply = stash apply
	rl = reflog

[pager]
	diff=diff-so-fancy | less --tabs=1,5 -RFX
	show=diff-so-fancy | less --tabs=1,5 -RFX

[user]
	email=kkxandeer@gmail.com
	name=Kevin Du

[http]
[http "https://github.com"]
	proxy = http://localhost:8010
	sslVerify = false

[github]
	user=xandeer

[includeIf "gitdir:~/projects/work/"]
	path = ~/projects/work/.gitconfig