#!/usr/bin/env bash

DOTS_ROOT=$HOME/projects/personal/dotfiles

function syncRime() {
  make -C $DOTS_ROOT/rime
}

function install() {
  make -C $DOTS_ROOT install
}

case "$1" in
  install|i)
    install;;
  rime|r)
    syncRime;;
  *)
    echo "== ! dots: missing or invalid argument ! =="
    echo "Try again with: install)|rime(r)"
    exit 2
esac
